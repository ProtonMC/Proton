{
  "schemaVersion": 1,
  "id": "proton",
  "version": "${version}",

  "name": "Proton",
  "description": "A rewrite of Quark for fabric.",
  "authors": [
    "hydos",
    "The Simplex team",
    "Vazkii",
    "Original Devs of Quark"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/hydos/Proton"
  },

  "license": "Vazkii Crayon Licence",
  "icon": "assets/proton/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "io.github.hydos.proton.Proton"
    ],
    "client": [
      "io.github.hydos.proton.client.ProtonClient"
    ],
    "server": [
      "io.github.hydos.proton.server.ProtonDedicatedServer"
    ],
    "modmenu": [
      "io.github.hydos.proton.client.modmenu.ModMenuCompat"
    ],
    "preLaunch": [
      "io.github.hydos.proton.ProtonPreLaunch"
    ]
  },
  "mixins": [
    "proton.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.7.4",
    "fabric": "*",
    "minecraft": "1.16.x"
  },

  "suggests": {
    "karam": "*",
    "song-sounds": "*",
    "moundertweaks": "*",
    "chat_heads": "*"
  },

  "recommends": {
    "modmenu": "*"
  }
}
